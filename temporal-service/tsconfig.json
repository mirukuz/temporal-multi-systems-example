{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "build", // Output directory where compiled JS files should go
        "rootDir": "src" // Root directory of TypeScript files
    },
    "include": [
        "src/**/*.ts"
    ], /* Include all TypeScript files in 'src' directory and subdirectories */
    "exclude": [
        "node_modules",
        "build"
    ] /* Exclude node_modules and build directories */
}